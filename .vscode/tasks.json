{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Configure Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"${workspaceFolder}/build/debug",
				"-S",
				"${workspaceFolder}",
				"-DCMAKE_BUILD_TYPE=Debug",
				"-G",
				"Visual Studio 17 2022"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "CMake: Configure Release",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"${workspaceFolder}/build/release",
				"-S",
				"${workspaceFolder}",
				"-DCMAKE_BUILD_TYPE=Release",
				"-G",
				"Visual Studio 17 2022"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "CMake: Build Debug",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"${workspaceFolder}/build/debug",
				"--config",
				"Debug"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": "CMake: Configure Debug"
		},
		{
			"label": "CMake: Build Release",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"${workspaceFolder}/build/release",
				"--config",
				"Release"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"dependsOn": "CMake: Configure Release"
		},
		{
			"label": "Launch Debug",
			"type": "shell",
			"command": "${workspaceFolder}/build/debug/bin/Debug/yaio.exe",
			"args": [],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"dependsOn": "CMake: Build Debug"
		}
	]
}